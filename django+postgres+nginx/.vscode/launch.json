    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Python Debugger: Django",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "runserver",
                "--noreload", //追加
                "--nothreading", //追加
            ],
            "django": true,
            "autoStartBrowser": false,
            "program": "${workspaceFolder}\\src\\manage.py",
            "env": {
                "DJANGO_DEBUG": "True"
            }
        }
    ]
}